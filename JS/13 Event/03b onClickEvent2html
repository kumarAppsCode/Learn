<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculation</title>
    <script>
        
        function calculatefun(a){
            var x=parseInt(document.calForm.num1.value);
            var y=parseInt(document.calForm.num2.value);
            var z=document.calForm.result;

            if(isNaN(x) || isNaN(y)){
                if(isNaN(x)){
                    alert("Enter the value of Number 1");
                }else if(isNaN(y)){
                    alert("Enter the value of Number 2");
                }
            }else{
                if(a.value=="Add"){
                    z.value=x+y;
                }else if(a.value=="Sub"){
                    z.value=x-y;
                }else if(a.value=="Mul"){
                    z.value=x*y;
                }else if(a.value=="Div"){
                    z.value=x/y;
                }else if(a.value=="Mod"){
                    z.value=x%y;
                }
            }
        }
    </script>


</head>
<body>
    <form name="calForm">
        Number 1: <input type="number" name="num1"/><br>
        Number 2: <input type="number" name="num2"/><br>
        Result  : <input type="number" name="result"/><br>
        <button type="button" onclick="calculatefun(this)" name="add" value="Add">Add</button>
        <button type="button" onclick="calculatefun(this)" name="sub" value="Sub">Sub</button>
        <button type="button" onclick="calculatefun(this)" name="mul" value="Mul">Mul</button>
        <button type="button" onclick="calculatefun(this)" name="div" value="Div">Div</button>
        <button type="button" onclick="calculatefun(this)" name="mod" value="Mod">Mod</button>
    </form>

</body>
</html>
